    "singularName": "student-review",
    "pluralName": "student-reviews",
    "displayName": "Student Review",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "postedDate": {
      "type": "date"
    },
    "reviewerName": {
      "type": "string"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "reviewerImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "content": {
      "type": "richtext"
    },
    "reviewerDesignation": {
      "type": "string",
      "required": true,
      "maxLength": 35
    }
